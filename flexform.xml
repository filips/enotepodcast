<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Configuration</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<url>
						<TCEforms>
							<label>URL if podcasts is on remote server. Ignores directory and list of versions if set.</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</url>
					<path>
						<TCEforms>
							<label>Podcast directory (relative to SITEpath)</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</path>
					<versions>
						<TCEforms>
							<label>Commalist of version (eg. "270p (DEFAULT: Presentable title),360p,720p(HD), 1080p(:)")</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</versions>
					<thumbnailSize>
						<TCEforms>
							<label>Thumbnail width (Defaults to 135px)</label>
							<config>
								<type>input</type>
								<size>20</size>
								<checkbox>135</checkbox>
								<eval>int</eval>
							</config>
						</TCEforms>
					</thumbnailSize>
					<showOnlyPublishedInDefaultFeed>
						<TCEforms>
							<label>Show only published podcasts in default feed</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</showOnlyPublishedInDefaultFeed>
					<showReverseOrder>
						<TCEforms>
							<label>Show oldest episodes first (reverse order)</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</showReverseOrder>
				</el>
			</ROOT>
		</sDEF>
		<sOptions>
			<ROOT>
				<TCEforms>
					<sheetTitle>Feed data</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<title>
						<TCEforms>
							<label>Title:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</title>
					<subtitle>
						<TCEforms>
							<label>Subtitle:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</subtitle>
					<description>
						<TCEforms>
							<label>Description:</label>
							<config>
								<type>text</type>
							</config>
						</TCEforms>
					</description>
					<copyright>
						<TCEforms>
							<label>Copyright:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</copyright>
					<author>
						<TCEforms>
							<label>Author/Owner:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</author>
					<author_email>
						<TCEforms>
							<label>Author/Owner email:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</author_email>
					<image>
						<TCEforms>
							<label>Image relative to PATH_site:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</image>
					<category>
						<TCEforms>
							<label>Valid iTunes main category:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</category>
					<language>
						<TCEforms>
							<label>ISO-639 Language:</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</language>
				</el>
			</ROOT>
		</sOptions>
	</sheets>
</T3DataStructure>
